function start() {
    if(facingEast()){
        makeRightSquare();
    }else{
        makeLeftSquare();
    }
}

function makeRightSquare(){
    for(var i = 0; i < 4; i++){
        putBall();
        move();
        turnLeft();
    }
}

function makeLeftSquare(){
    for(var i = 0; i < 4; i++){
        putBall();
        move();
        turnRight();
    }
}
